<div class="container">
  <%= render 'layouts/components/search.html.erb' %>
  <br>
  <% if @bicycles.count == 1 %>
    <p class="results-found"><%= @bicycles.count %> result found for "<%= @query %>"</p>
  <% end %>
  <% if @bicycles.count > 1 %>
    <p class="results-found"><%= @bicycles.count %> results found for "<%= @query %>"</p>
  <% end %>
  <div class="search_results_flex">
    <%= render 'layouts/components/card.html.erb' %>
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
    ></div>
  </div>
</div>
