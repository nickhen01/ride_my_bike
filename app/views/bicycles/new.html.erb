<div class="container container-form">
  <div class="col-3 col-sm-3">
    <div class="sidebar">
      <div class="main">
        <%= link_to 'Edit Profile', '/' %>
        <%= link_to 'Photos', '/' %>
        <%= link_to 'Reviews', '/' %>
        <%= link_to 'Trust and Verification', '/' %>
      </div>
    </div>
  </div>

  <div class="col-9 col-sm-9">
    <div class="panel panel-form">
      <div class="header">
        <p>Add a bicycle!</p>
      </div>
      <%= simple_form_for @bicycle do |f| %>
          <%= f.input :brand %>
          <%= f.input :model %>
          <%= f.input :post_code, label: "Postcode" %>
          <%= f.input :description, placeholder: "Write a short description of your bike", input_html: { rows: 3 } %>
          <%= f.input :price, label: "Price per hour (Â£)" %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <div class="form-group">
            <label class="form-control-label text optional" for="bicycle_description"></label>
            <%= f.submit %>
          </div>
      <% end %>
    </div>

  </div>
</div>
